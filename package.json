  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "firebase-admin": ">=11.0.0",
    "firebase-functions": ">=4.0.0"
