{
  "name": "firebase-functions-middleware",
  "version": "1.0.7",
  "license": "MIT",
  "author": "ishowta",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint ./src",
